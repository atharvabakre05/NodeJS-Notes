<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%- locals.title %></title>
  <meta name="description" content="<%- locals.description %>">

  <!-- Fonts & CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;700&family=Unbounded:wght@400;700&display=swap" rel="stylesheet">
</head>

<body class="home front-page">

  <!-- Page Loader -->
  <div id="page-loader">
    <div class="spinner"></div>
    <div class="loader-text">Loading Notes...</div>
  </div>

  <!-- Header -->
  <%- include('../partials/header.ejs') %>

  <!-- Page content -->
  <main class="page-content">
    <%- body %>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer.ejs') %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Loader Script -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const loader = document.getElementById('page-loader');
      // Minimum loader display time: 0.8s for smooth effect
      setTimeout(() => {
        loader.classList.add('fade-out');
        setTimeout(() => { loader.style.display = 'none'; }, 500);
      }, 800);
    });
  </script>
</body>
</html>
